@using RealtyApp.Core.Application.ViewModels.ImmovableAsset;
@using RealtyApp.Core.Application.ViewModels.ImmovableAssetType;
@model List<ImmovableAssetViewModel>
@{
    ViewData["Title"] = "Home Page";
    DataFilterViewModel filterVm = ViewBag.DataFilterViewModel;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="card shadow">
                <div class="card-header text-dark text-center">
                    <h4>Filtros</h4>
                </div>
                <div class="card-body text-dark">

                    <form method="post" asp-controller="Home" asp-action="Index">

                        <h4 class="card-title mb-2 text-center">Tipos de propiedad</h4>

                        <div class="mb-2 ms-3">
                            <div class="form-check">
                                <input class="form-check-input fs-5" value="0" type="radio" name="ImmovableAssetTypeId" id="immovableAssetType-all" />
                                <label class="form-check-label fs-5" for="immovableAssetType-all">Todas</label>
                            </div>
                        </div>

                        @foreach (ImmovableAssetTypeViewModel type in ViewBag.ImmovableAssetTypes)
                        {
                            <div class="mb-2 ms-3">
                                <div class="form-check">
                                    <input class="form-check-input fs-5" value="@type.Id" type="radio" name="ImmovableAssetTypeId" id="immovableAssetType-@type.Id" />
                                    <label class="form-check-label fs-5" for="ImmovableAssetType-@type.Id">@type.Name</label>
                                </div>
                            </div>
                        }

                        <h4 class="card-title mb-2 text-center">Precio minimo y máximo</h4>

                        @if (filterVm != null)
                        {
                            <div class="input-group mb-2">
                                <label for="minRange" class="form-label m-0">Precio minimo</label>
                                <input type="range" class="form-range" name="MinPrice" min="0" max="@filterVm.MinPrice" value="0" id="minRange">
                                <label for="maxRange" class="form-label m-0">Precio máximo</label>
                                <input type="range" class="form-range" name="MaxPrice" min="@filterVm.MinPrice" max="@filterVm.MaxPrice" value="0" id="maxRange">
                            </div>

                            <h4 class="card-title mb-2 text-center">Cantidad de habitaciones</h4>

                            <div class="mb-2">
                                <input type="range" class="form-range" name="BedroomQuantity" min="0" max="@filterVm.MaxBedroomQuantity" value="0" id="bedroomRange">
                            </div>

                            <h4 class="card-title mb-2 text-center">Cantidad de baños</h4>

                            <div class="mb-2">
                                <input type="range" class="form-range" name="BathroomQuantity" min="0" max="@filterVm.MaxBathroomQuantity" value="0" id="bathroomRange">
                            </div>
                        }
                        else
                        {
                            <div class="input-group mb-2">
                                <label for="minRange" class="form-label m-0">Precio minimo</label>
                                <input type="range" class="form-range" name="MinPrice" min="0" max="5" value="0" id="minRange">
                                <label for="maxRange" class="form-label m-0">Precio máximo</label>
                                <input type="range" class="form-range" name="MaxPrice" min="5" max="10" value="0" id="maxRange">
                            </div>

                            <h4 class="card-title mb-2 text-center">Cantidad de habitaciones</h4>

                            <div class="mb-2">
                                <input type="range" class="form-range" name="BedroomQuantity" min="0" max="5" value="0" id="bedroomRange">
                            </div>

                            <h4 class="card-title mb-2 text-center">Cantidad de baños</h4>

                            <div class="mb-2">
                                <input type="range" class="form-range" name="BathroomQuantity" min="0" max="5" value="0" id="bathroomRange">
                            </div>
                        }

                        <button type="submit" class="btn btn-outline-primary form-control">Filtrar</button>

                    </form>


                </div>
            </div>
        </div>
        <div class="col-9">
            <div class="card mx-0">
                <div class="card-header mb-0 text-light">
                    <h2 class="text-lg-center mb-2">!Encuentra la propiedad!</h2>
                    <form method="post" asp-controller="Home" asp-action="Index">
                        <div class="input-group mb-1">
                            <input type="search" class="form-control rounded" name="Code" id="CodeTxt" placeholder="Escribe el código de la propiedad que quieres encontrar" aria-label="Escribe el código de la propiedad que quieres encontrar" aria-describedby="search-addon" />
                            <button type="submit" class="btn btn-success">Buscar</button>
                        </div>
                    </form>
                </div>
                @if (Model == null || Model.Count == 0)
                {
                    <h3 class="text-lg-center mb-3">No hay articulos</h3>
                }
                else
                {
                    <div class="card-body">
                        <div class="row">
                            @foreach (ImmovableAssetViewModel item in Model)
                            {
                                <div class="col-6 mb-3">
                                    <div class="card shadow rounded" style="max-width: 400px">
                                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"><img src="@item.UrlImage01" class="card-img-top" /></a>
                                        <a asp-controller="Client" asp-action="" asp-route-id="@item.Id" class="top-50"><i class="fa-regular fa-heart text-danger"></i></a>

                                        <div class="card-body">
                                            <div class="mb-2">
                                                <a class="text-decoration-none text-dark details-hov" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"><h4>@item.ImmovableAssetTypeName</h4></a>
                                                <small class="card-text text-secondary">@item.Address</small>
                                            </div>

                                            <div class="mb-2">
                                                <small class="card-text text-secondary">Código</small>
                                                <h4>@item.Code</h4>
                                            </div>

                                            <div class="mb-2">
                                                <small class="card-text text-secondary">@item.SellTypeName</small>
                                                <h4 class="text-danger">RD$ @item.Price</h4>
                                            </div>

                                            <div class="d-flex mb-2 border border-top border-secondary">
                                                <div class="me-2">
                                                    <i class="fa-light fa-bed-empty"></i>
                                                    <small class="card-text text-secondary">@item.BedroomQuantity</small>
                                                </div>
                                                <div class="me-2">
                                                    <i class="fa-light fa-bath"></i>
                                                    <small class="card-text text-secondary">@item.BathroomQuantity</small>
                                                </div>
                                                <div class="me-2">
                                                    <i class="fa-light fa-ruler-horizontal"></i>
                                                    <small class="card-text text-secondary">@item.Meters mt</small>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>