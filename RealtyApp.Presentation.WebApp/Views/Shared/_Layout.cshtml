@using Microsoft.AspNetCore.Http
@using RealtyApp.Core.Application.Dtos.Account
@using RealtyApp.Core.Application.Helpers;
@using RealtyApp.Core.Application.ViewModels.User
@inject IHttpContextAccessor httpContextAccessor
@{
    var User = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
    var isAdmin = User != null ? User.Roles.Any(r => r == "Administrator") : false;
    var isAgent = User != null ? User.Roles.Any(r => r == "Agent") : false;
    var isClient = User != null ? User.Roles.Any(r => r == "Client") : false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealtyApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-danger navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="@(User!= null ? "Home" : "User")" asp-action="Index">RealtyApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        @if (User != null)
                        {

                            if (isClient)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Client" asp-action="Index">Home</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Agents">Agentes</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Client" asp-action="Index">Agentes</a>
                                </li>
                            }

                            if (isAgent)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Agent" asp-action="Index">Home</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Agent" asp-action="Index">Mi perfil</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Agent" asp-action="Index">Mantenimiento de propiedades</a>
                                </li>
                            }

                            if (isAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">Home</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">Listado de los agentes</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">Mantenimiento de administradores</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">Mantenimiento de desarrolladores</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">Mantenimiento de tipo de propiedades</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">Mantenimiento de tipo de ventas</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">Mantenimiento de mejoras</a>
                                </li>
                            }

                            <li class="nav-item align-item-end justify-content-end">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="User" asp-action="LogOut">Cerrar session (@(User.UserName))</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Agents">Agentes</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="User" asp-action="Register">Unete a la App!</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="User" asp-action="Index">Iniciar sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - RealtyApp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
