@using RealtyApp.Core.Application.ViewModels.Improvement;
@model ImprovementSaveViewModel
@{
    ViewData["Title"] = "Eliminar tipo de propiedad";
}

<div class="row">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header card_Title text-light">
                <h4>Esta seguro que desea eliminar el tipo de venta:  @Model.Name?</h4>
            </div>
            <div class="card-body cont_BodyType_Immovable">

                <form method="post" asp-controller="Improvement" asp-action="Delete">

                    <button type="submit" class="btn btn-outline-danger">Eliminar</button>
                    <a asp-controller="Improvement" asp-action="Index" class="btn btn-outline-warning">Cancelar</a>

                </form>

            </div>
        </div>
    </div>

</div>

