@using RealtyApp.Core.Application.ViewModels.SellType;
@model SaveSellTypeViewModel
@{
    ViewData["Title"] = "Creacion de tipo de propiedades";

    bool editing = Model.Id==0 ? false : true;
}

<div class="container">

    <div class="row">

        <div class="card shadow-sm ">

            <div class="card-body contCard">
                <div class="card-header bg-dark text-light">
                    <h4>@(editing ? $"Editando el tipo de venta: {Model.Name}" : "Creando un nuevo tipo de venta")</h4>
                </div>
                <form method="post" asp-controller="SellType" asp-action="@(editing?"Edit":"Create")" class="form p-4">

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Nombre: </label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Descripcion: </label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>


                    <div class="btn-group w-100">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        <a asp-controller="SellType" asp-action="Index" class="btn btn-warning">Volver atras</a>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div>
